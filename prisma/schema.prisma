// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id       String @id
  username String

  matches Match[] @relation("PlayerMatches")

  coachMatches Match[] @relation("CoachMatches")

  createdAt DateTime @default(now())

  readyMessages  ReadyMessage[]
  readiedMatches Match[]        @relation("PlayerReadiedMatches")
}

model Match {
  id      Int      @id @default(autoincrement())
  players Player[] @relation("PlayerMatches")

  readyPlayers  Player[]       @relation("PlayerReadiedMatches")
  readyMessages ReadyMessage[]

  coach   Player @relation("CoachMatches", fields: [coachId], references: [id])
  coachId String

  winner      String?
  playerStats PlayerMatchStat[]

  cancelled Boolean @default(false)
  started   Boolean @default(false)
  finished  Boolean @default(false)
  processed Boolean @default(false)

  createdAt DateTime @default(now())
}

model PlayerMatchStat {
  match    Match  @relation(fields: [matchId], references: [id])
  matchId  Int
  playerId String

  team   String
  kills  Int
  deaths Int

  @@unique([matchId, playerId])
}

model ReadyMessage {
  id String @id

  match   Match @relation(fields: [matchId], references: [id])
  matchId Int

  player   Player @relation(fields: [playerId], references: [id])
  playerId String
}
